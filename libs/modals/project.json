{
    "name": "modals",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/modals/src",
    "projectType": "library",
    "tags": [],
    "targets": {
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["libs/modals/**/*.{ts,tsx,js,jsx}"]
            }
        },
        "build": {
            "executor": "@nx/vite:build",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "outputPath": "dist/libs/modals",
                "emptyOutDir": true,
                "sourcemap": true,
                "minify": true,
                "manifest": true,
                "ssrManifest": true,
                "ssr": true,
                "logLevel": "info",
                "force": true,
                "cssCodeSplit": true,
                "generatePackageJson": true,
                "includeDevDependenciesInPackageJson": true
            },
            "configurations": {
                "development": {
                    "mode": "development"
                },
                "production": {
                    "mode": "production"
                }
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "outputs": ["coverage/libs/modals"],
            "options": {
                "passWithNoTests": true,
                "reportsDirectory": "../../coverage/libs/modals"
            }
        },
        "static:server": {
            "executor": "@nx/vite:preview-server",
            "options": {
                "buildTarget": "modals:build",
                "port": 3000,
                "host": "0.0.0.0",
                "open": false,
                "logLevel": "info"
            }
        },
        "deploy": {
            "executor": "ngx-deploy-npm:deploy",
            "options": {
                "access": "public",
                "buildTarget": "production"
            }
        }
    }
}
