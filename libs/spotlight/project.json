{
    "name": "spotlight",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/spotlight/src",
    "projectType": "library",
    "tags": [],
    "targets": {
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["libs/spotlight/**/*.{ts,tsx,js,jsx}"]
            }
        },
        "build": {
            "executor": "@nx/rollup:rollup",
            "outputs": ["{options.outputPath}"],
            "options": {
                "tsConfig": "libs/spotlight/tsconfig.lib.json",
                "project": "libs/spotlight/package.json",
                "entryFile": "libs/spotlight/src/index.ts",
                "external": ["react", "react-dom", "react/jsx-runtime"],
                "rollupConfig": "@nx/react/plugins/bundle-rollup",
                "compiler": "tsc",
                "format": ["esm", "cjs"],
                "buildableProjectDepsInPackageJsonType": "dependencies",
                "updateBuildableProjectDepsInPackageJson": true,
                "generateExportsField": true,
                "assets": [
                    {
                        "glob": "libs/spotlight/README.md",
                        "input": ".",
                        "output": "."
                    },
                    {
                        "glob": "libs/spotlight/CHANGELOG.md",
                        "input": ".",
                        "output": "."
                    }
                ],
                "outputPath": "dist/libs/spotlight",
                "skipTypeCheck": true
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "libs/spotlight/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "static:server": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "pnpm nx run spotlight:build --watch",
                    "http-server dist/libs/spotlight -p 4511 -d -i -g -b --cors -c-1 --log-ip --utc-time"
                ],
                "parallel": true
            }
        },
        "deploy": {
            "executor": "ngx-deploy-npm:deploy",
            "options": {
                "access": "public"
            }
        }
    }
}
