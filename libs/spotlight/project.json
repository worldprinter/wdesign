{
    "name": "spotlight",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/spotlight/src",
    "projectType": "library",
    "tags": [],
    "targets": {
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["libs/spotlight/**/*.{ts,tsx,js,jsx}"]
            }
        },
        "build": {
            "executor": "@nx/rollup:rollup",
            "outputs": ["{options.outputPath}"],
            "options": {
                "tsConfig": "libs/spotlight/tsconfig.lib.json",
                "project": "libs/spotlight/package.json",
                "entryFile": "libs/spotlight/src/index.ts",
                "external": ["react", "react-dom", "react/jsx-runtime"],
                "rollupConfig": "@nx/react/plugins/bundle-rollup",
                "compiler": "tsc",
                "format": ["esm", "cjs"],
                "buildableProjectDepsInPackageJsonType": "dependencies",
                "updateBuildableProjectDepsInPackageJson": true,
                "generateExportsField": true,           "skipTypeCheck": true,
                "assets": [
                    {
                        "glob": "libs/spotlight/README.md",
                        "input": ".",
                        "output": "."
                    },
                    {
                        "glob": "libs/spotlight/CHANGELOG.md",
                        "input": ".",
                        "output": "."
                    }
                ],
                "outputPath": "dist/libs/spotlight"
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "outputs": ["coverage/libs/spotlight"],
            "options": {
                "passWithNoTests": true,
                "reportsDirectory": "../../coverage/libs/spotlight"
            }
        },
        "static:server": {
            "executor": "@nx/vite:preview-server",
            "options": {
                "buildTarget": "spotlight:build",
                "host": true,
                "watch": true
            }
        },
        "deploy": {
            "executor": "ngx-deploy-npm:deploy",
            "options": {
                "access": "public",
                "buildTarget": "production"
            }
        }
    }
}
